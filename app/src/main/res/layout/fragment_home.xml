<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <!--  Dashboard Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            android:paddingVertical="0dp"
            android:background="@android:color/white">

            <!-- Hamburger Icon -->
            <ImageView
                android:id="@+id/hamburgerIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/threeline_ic"
                android:contentDescription="Menu"
                app:tint="#000000" />

            <!-- Greeting Text -->
            <TextView
                android:id="@+id/greetingText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Welcome Back, User!"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center" />

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/profile_ic"
                android:contentDescription="Profile"
                android:scaleType="centerCrop"
                android:layout_marginStart="8dp"
                android:padding="2dp"/>
        </LinearLayout>
        <!-- End of Header -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:id="@+id/rootLayout">


                <TextView
                    android:id="@+id/viewAllButton"
                    android:text="View All >"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@drawable/circle_background"
                    android:padding="12dp"
                    android:layout_width="60dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp" />

                <!-- Horizontal All Cards ScrollView -->
                <HorizontalScrollView
                    android:id="@+id/cardScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/cardContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

            </LinearLayout>

        <ViewFlipper
            android:id="@+id/actionFlipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            android:autoStart="true"
            android:flipInterval="3000"
            android:background="@android:color/transparent">

            <!-- Action 1 -->
            <TextView
                android:text="ðŸ“ž Call Support - 9560837525"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:layout_marginHorizontal="16dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/bg_action_chip"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Action 2 -->
            <TextView
                android:text="ðŸ’¸ Get Instant Loan"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:layout_marginHorizontal="16dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/bg_action_chip"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Action 3 -->
            <TextView
                android:text="ðŸ“‹ View Account Details and many more"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:layout_marginHorizontal="16dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/bg_action_chip"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ViewFlipper>


        <RadioGroup
            android:id="@+id/tabRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:background="@drawable/tab_group_background"
            android:padding="4dp">

        <RadioButton
                android:id="@+id/tabTransact"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Transact"
                android:gravity="center"
                android:background="@drawable/tab_selector"
                android:textColor="#000000"
                android:button="@null"
                android:textStyle="bold"/>

            <RadioButton
                android:id="@+id/tabInvest"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Invest"
                android:gravity="center"
                android:background="@drawable/tab_selector"
                android:textColor="#000000"
                android:button="@null"
                android:textStyle="bold"/>

            <RadioButton
                android:id="@+id/tabLoans"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Loans &amp; More"
                android:gravity="center"
                android:background="@drawable/tab_selector"
                android:textColor="#000000"
                android:button="@null"
                android:textStyle="bold"/>
        </RadioGroup>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:name="androidx.fragment.app.Fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            />

    </LinearLayout>
</ScrollView>
