<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">


        <!--  Dashboard Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            android:paddingVertical="0dp"
            android:background="@android:color/white">

            <!-- Hamburger Icon -->
            <ImageView
                android:id="@+id/hamburgerIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/threeline_ic"
                android:contentDescription="Menu"
                app:tint="#000000" />

            <!-- Greeting Text -->
            <TextView
                android:id="@+id/greetingText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Welcome Back, User!"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center" />

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/profile_ic"
                android:contentDescription="Profile"
                android:scaleType="centerCrop"
                android:layout_marginStart="8dp"
                android:padding="2dp"/>
        </LinearLayout>
        <!-- End of Header -->


        <!-- Horizontal ScrollView for Account + Credit Cards -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="4dp">


                <!-- Compact View All Button Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <TextView
                            android:text="View"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="All"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:src="@drawable/ic_arrow_downward"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>



                <!-- View All / Account Summary Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="280dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FF6F00">

                        <!-- Account Info -->
                        <TextView
                            android:text="Savings Account"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="**** 1234"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="â‚¹1,24,350.00"
                            android:textSize="20sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="12dp"
                            android:background="#FFFFFF" />

                        <!-- Button Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="12dp"
                            android:weightSum="3">

                            <TextView
                                android:text="Reset PIN"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="Generate Card"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="Statement"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>




                <!-- Credit Card 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="280dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#333333">

                        <TextView
                            android:text="Visa Credit Card"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="**** 5678"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Limit: â‚¹1,00,000"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="16dp"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="12dp"
                            android:background="#FFFFFF" />

                        <!-- Button Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="12dp"
                            android:weightSum="3">

                            <TextView
                                android:text="Reset PIN"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="Generate Card"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="Statement"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Credit Card 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="280dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#4CAF50">

                        <TextView
                            android:text="MasterCard"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="**** 9012"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Limit: â‚¹50,000"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="16dp"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="12dp"
                            android:background="#FFFFFF" />

                        <!-- Button Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="12dp"
                            android:weightSum="3">

                            <TextView
                                android:text="Reset PIN"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="Generate Card"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="Statement"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/autoScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:gravity="center_vertical">

                <!-- Action 1 -->
                <TextView
                    android:text="ðŸ“ž Call Support - 9560837525"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_action_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- Action 2 -->
                <TextView
                    android:text="ðŸ’¸ Get Instant Loan"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_action_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- Action 3 -->
                <TextView
                    android:text="ðŸ“‹ View Account Details and many more"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_action_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </HorizontalScrollView>

        <RadioGroup
            android:id="@+id/tabRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/tabTransact"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Transact"
                android:gravity="center"
                android:background="@drawable/tab_selector"
                android:textColor="#000000"
                android:button="@null"
                android:textStyle="bold"/>

            <RadioButton
                android:id="@+id/tabInvest"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Invest"
                android:gravity="center"
                android:background="@drawable/tab_selector"
                android:textColor="#000000"
                android:button="@null"
                android:textStyle="bold"/>

            <RadioButton
                android:id="@+id/tabLoans"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Loans &amp; More"
                android:gravity="center"
                android:background="@drawable/tab_selector"
                android:textColor="#000000"
                android:button="@null"
                android:textStyle="bold"/>
        </RadioGroup>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/childFragmentContainer"
            android:name="androidx.fragment.app.Fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</ScrollView>
